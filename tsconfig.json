{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "noImplicitAny": true,
        "module": "CommonJS",
        "target": "es2022",
        "lib": ["es2022"],
        "allowJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "declaration": true,
        "removeComments": false,
        "types": ["node"]
    },
    "exclude": [
        "node_modules",
        "dist",
        "database",
        "webpack.config.cjs"
    ]
}